<!-- Modal -->
<%= form_with(model: @task, url: task_path(@task), method: :patch, local: true) do |form| %>
  <div class="modal fade" id="edittaskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="edittaskModalLabel">Cancelar </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">  
          <%= form.label :start_date %>:
          <%= form.date_field :start_date, class:"form-control", id:"editstartDate" %>

          <%= form.label :end_date %>
          <%= form.date_field :end_date, class:"form-control", id:"endDate" %>
          <%= form.label :rmk %>
          <%= form.text_area :rmk, class:"form-control", id:"rmk" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('labels.Close') %></button>
          <%= submit_tag t('labels.Cancel'), class:"btn btn-primary", id:"submit" %>
        </div>
      </div>
    </div>
  </div>
<% end %>