<%= form_with model: @task, local: true do |form| %>
  <div class="modal fade" id="showtaskModal" tabindex="-1" role="dialog" aria-labelledby="showtaskModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="showtaskModalLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form.label :start_date %>:
          <%= form.date_field :start_date, class:"form-control", id:"startDate" %><br />
          <%= form.label :task_field %>:
          <%= form.text_area :task_field, class:"form-control", id:"taskField" %><br />
          <%= form.label :status %>:
          <%= form.text_field :status, class:"form-control", id:"status" %>
          <%#= form.select :status, statuses_options {|k,v| [k.humanize_i18n, v]}, {}, {class:"form-control"} %>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t('labels.Close') %></button>
          <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t('labels.Edit') %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
