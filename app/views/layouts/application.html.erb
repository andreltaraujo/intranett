<!DOCTYPE html>
<html>
  <head>
    <title>Intranett</title>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('logo-footer.png') %>
    <%= stylesheet_link_tag 'application' %>
  </head>
  <body class="login">
    <div class="top_nav">
      <div class="nav_menu">
        <nav class="nav navbar-nav">
          <ul class=" navbar-right">
          <% if user_signed_in? %>
            <li class="nav-item dropdown open" style="padding-left: 15px;">
              <a class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false"><%= current_user.role_i18n %>: <%= current_user.name %>
              </a>
              <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">
                <%= link_to welcome_index_path, class:"dropdown-item" do %><i class="fa fa-home pull-right"></i><%= t('labels.Home') %><% end %>
                <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item" do %><i class="fa fa-sign-out pull-right"></i><%= t('labels.Logout') %><% end %>
              </div>
          <% else %>
          <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <%= yield %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>